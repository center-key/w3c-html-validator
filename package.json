{
   "name": "w3c-html-validator",
   "version": "0.7.6",
   "description": "A package for testing HTML files or URLs against the W3C validator (written in TypeScript)",
   "license": "MIT",
   "type": "module",
   "module": "dist/w3c-html-validator.js",
   "main": "dist/w3c-html-validator.umd.cjs",
   "types": "dist/w3c-html-validator.d.ts",
   "files": [
      "dist"
   ],
   "exports": {
      ".": {
         "import": "./dist/w3c-html-validator.js",
         "require": "./dist/w3c-html-validator.umd.cjs"
      },
      "./": "./dist/"
   },
   "bin": {
      "w3c-html-validator": "bin/cli.js"
   },
   "repository": "github:center-key/w3c-html-validator",
   "homepage": "https://github.com/center-key/w3c-html-validator",
   "bugs": "https://github.com/center-key/w3c-html-validator/issues",
   "docs": "https://github.com/center-key/w3c-html-validator#readme",
   "author": "Thomas Davis <thomasalwyndavis@gmail.com>",
   "keywords": [
      "html",
      "html5",
      "validator",
      "w3c"
   ],
   "jshintConfig": {
      "esversion": 9,
      "strict": "implied",
      "eqeqeq": true,
      "undef": true,
      "unused": true,
      "varstmt": true,
      "node": true,
      "mocha": true
   },
   "eslintConfig": {
      "ignorePatterns": [
         "build",
         "dist",
         "node_modules"
      ],
      "root": true,
      "parser": "@typescript-eslint/parser",
      "plugins": [
         "@typescript-eslint"
      ],
      "extends": [
         "eslint:recommended",
         "plugin:@typescript-eslint/recommended"
      ],
      "rules": {
         "@typescript-eslint/no-non-null-assertion": "off"
      }
   },
   "scripts": {
      "examples": "node examples.js",
      "lint": "    jshint . --exclude node_modules,build,dist && eslint --max-warnings 0 . --ext .ts",
      "tsc": "     tsc --version && tsc --project . && tsc --project . --module UMD --outDir build/umd",
      "pretest": " npm run lint && rimraf build dist **/.DS_Store && npm run tsc && gulp make-dist",
      "test": "    mocha spec/*.spec.js --timeout 5000"
   },
   "dependencies": {
      "chalk": "~4.1",
      "fancy-log": "~1.3",
      "glob": "~7.1",
      "superagent": "~6.1"
   },
   "devDependencies": {
      "@types/fancy-log": "~1.3",
      "@types/node": "~16.3",
      "@types/superagent": "~4.1",
      "@typescript-eslint/eslint-plugin": "~4.28",
      "@typescript-eslint/parser": "~4.28",
      "assert-deep-strict-equal": "~0.0",
      "eslint": "~7.31",
      "gulp": "~4.0",
      "gulp-header": "~2.0",
      "gulp-rename": "~2.0",
      "gulp-replace": "~1.1",
      "gulp-size": "~4.0",
      "jshint": "~2.13",
      "merge-stream": "~2.0",
      "mocha": "~9.0",
      "rimraf": "~3.0",
      "typescript": "~4.3"
   }
}
